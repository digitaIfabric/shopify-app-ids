<% content_for :javascript do %>
  <script type="text/javascript">
    ShopifyApp.ready(function(){
      ShopifyApp.Bar.initialize({ title: "Home" });
    });
  </script>
<% end %>
<h2>Products</h2>

<ul>
  <% @products.each do |product| %>
      <li><%= product.title %></li>
      <li><%= link_to product.id, "https://#{@shop_session.url}/admin/products/#{product.id}", target: "_top" %></li>
<% end %>
</ul>


<%= link_to 'Download CSV list', products_path(format: :csv) %>
